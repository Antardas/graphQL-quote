{
  "extends": ["prettier", "airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "env": {
    "commonjs": true,
    "node": true
  },
  "rules": {
    "no-console": 0,
    "indent": 0,
    "linebreak-style": 0,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4,
        "semi": true
      }
    ],
    // own rule start
    "object-curly-newline": [
      "error",
      {
        "consistent": true
      }
    ],
    "comma-dangle": ["error", "only-multiline"],
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id"]
      }
    ]
    // own rule -- End
  },
  "plugins": ["prettier"]
}
